# this is a comment

config {
    shell "bash"
}

target hello_name {
	desc {
		"this command says hello to a name",
		"$name, the name of the user"
	}
	var {
		name "Tom"
	}
	run {
		echo "hello $name"
	}
}

run hello_name {
	var:before {
		name {
			echo "James"
		}
	}
	run {
		echo "hello tim"
	}
}

var {
	morning false
}

run {
	if morning {
		run { echo "good morning" }
	} else {
		run { echo "good afternoon" }
	}
}